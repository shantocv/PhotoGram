<div class="posts-wrapper row">
	<div class="post">
		<div class="post-head">
			<div class="name">
				Shanto C V
			</div>			
		</div>
		<div class="image center-block">
			<%=	image_tag @post.image.url(:medium) %>
		</div>
		<p><%= @post.caption %></p>
		<div>
			<%= link_to 'Cancel', posts_path %> | <%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
		</div>
	</div>	
</div>
