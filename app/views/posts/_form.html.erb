<div class="form-wrapper">
	<%= simple_form_for @post do |form| %>
		<%= form.input :caption, input_html: { class: "form-control custom-form-control" } %>
	  <%= form.input :image, as: :file, input_html: { class: 'btn btn-primary custom-btn' } %>
	  <br/>
	  <%= form.button :submit, class: 'btn btn-primary custom-btn' %>
	<% end %>	
</div>
