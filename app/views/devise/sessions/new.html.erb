<div class="form-wrapper form-color">
<h2>Log in</h2>
<hr/>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, input_html: { class: "form-control custom-form-control" } %>
    <%= f.input :password, required: false, input_html: { class: "form-control custom-form-control" } %>
    <p><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></p>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-primary custom-btn' %>
  </div>
<% end %>
<br/>
<%= render "devise/shared/links" %>
