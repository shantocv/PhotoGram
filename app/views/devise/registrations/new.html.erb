<div class="form-wrapper form-color">
	<h2>Sign up</h2>
	<hr/>
	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	  	<div class="form-group">
	  		<%= f.input :user_name, required: true, input_html: { class: "form-control custom-form-control" } %>
	  	</div>
	  	<div class="form-group">
	    	<%= f.input :email, required: true, autofocus: true, input_html: { class: "form-control custom-form-control" } %>
	  	</div>
	    <div class="form-group">
	    	<%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: "form-control custom-form-control" } %>	    	
	    </div>
	    <div class="form-group">
	    	<%= f.input :password_confirmation, required: true, input_html: { class: "form-control custom-form-control" } %>
	    </div>	    
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Sign up", class: 'btn btn-primary custom-btn' %>
	  </div>
	<% end %>
	<br/>
	<%= render "devise/shared/links" %>
</div>
